<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import pl.ziemniak.grafika.utils.rendering.Screen?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
			xmlns:fx="http://javafx.com/fxml"
			fx:controller="pl.ziemniak.grafika.controllers.MainMenuController" stylesheets="style.css">
	<left>
		<VBox>
			<!--Kamera-->
			<Label>Kamera</Label>
			<GridPane>
				<padding>
					<Insets top="10" left="0" right="10" bottom="10"/>
				</padding>
				<Label styleClass="data-info">X</Label>
				<Label fx:id="labelX" GridPane.columnIndex="1" styleClass="data-value">0.00</Label>

				<Label styleClass="data-info" GridPane.rowIndex="1">Y</Label>
				<Label fx:id="labelY" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="data-value">0.00
				</Label>

				<Label styleClass="data-info" GridPane.rowIndex="2">Z</Label>
				<Label fx:id="labelZ" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="data-value">0.00
				</Label>

				<Label styleClass="data-info" GridPane.rowIndex="3">Rotation X</Label>
				<Label fx:id="labelRotX" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="data-value">0.00
				</Label>

				<Label styleClass="data-info" GridPane.rowIndex="4">Rotation Y</Label>
				<Label fx:id="labelRotY" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="data-value">0.00
				</Label>

				<Label styleClass="data-info" GridPane.rowIndex="5">Rotation Z</Label>
				<Label fx:id="labelRotZ" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="data-value">0.00
				</Label>

				<Label styleClass="data-info" GridPane.rowIndex="6">Zoom</Label>
				<Label fx:id="labelZoom" GridPane.rowIndex="6" GridPane.columnIndex="1" styleClass="data-value">1.0</Label>
			</GridPane>
		</VBox>
	</left>
	<center>
		<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity">
			<Screen AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
					AnchorPane.topAnchor="0" fx:id="screen" height="700" width="700" onKeyPressed="#handleKeyPress" onKeyReleased="#handleKeyRelease" onScroll="#handleScroll"/>
		</AnchorPane>
	</center>
</BorderPane>
